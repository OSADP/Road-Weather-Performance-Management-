<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RWPM Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole(UIConstants.ROLE_BATTELLE_STR) || User.IsInRole(UIConstants.ROLE_RWMAINT_ADMIN_STR) || User.IsInRole(UIConstants.ROLE_RWMAINT_ELEVATED_STR) || User.IsInRole(UIConstants.ROLE_RWMAINT_READONLY_STR))
                    {
                        <li>@Html.ActionLink("RW Maintenance", "Index", "RWMaint")</li>
                    }
                    @if (User.IsInRole(UIConstants.ROLE_BATTELLE_STR) || User.IsInRole(UIConstants.ROLE_MOTORADV_ADMIN_STR) || User.IsInRole(UIConstants.ROLE_MOTORADV_ELEVATED_STR) || User.IsInRole(UIConstants.ROLE_MOTORADV_READONLY_STR))
                    {
                        <li>@Html.ActionLink("Motorist Advisories", "Index", "MotorAdv")</li>
                    }
                    @if (User.IsInRole(UIConstants.ROLE_BATTELLE_STR) || User.IsInRole(UIConstants.ROLE_TRAFCONT_ADMIN_STR) || User.IsInRole(UIConstants.ROLE_TRAFCONT_ELEVATED_STR) || User.IsInRole(UIConstants.ROLE_TRAFCONT_READONLY_STR))
                    {
                        <li>
                            @Html.ActionLink("Traffic Control", "Index", "TrafCont")
                        </li>
                    }
                    @if (User.IsInRole(UIConstants.ROLE_BATTELLE_STR))
                    {
                        <li>@Html.ActionLink("User Management", "CreateUsers", "BattelleAccount")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        
        <div id="weatherEvent"> </div>
    </div>
    @if(ViewBag.InACurrentWeatherEvent==true)
    {
    <div id="banner">
        <div id="banner-content">
            A weather event is currently in progress
        </div>
    </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Battelle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
